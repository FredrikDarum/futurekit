<% Globalize.with_locale(I18n.locale) do %>
 

<% content_for :title, @card.name + " - " %>
<div class="container">
  <div class="row card-full">
   
      <div class="col-md-5">
        <img src="<%= @card.photo_url(:display) %>" class="img-responsive img-card-thumb"/>
        <br>
        <% @card.tag_list.each do |tag| %>
        <span class="tags"> <%= tag %></span>
        <% end %>
      </div>
      <div class="col-md-7">
        <h1><%= @card.name %></h1>
        <p class="pull-right"> <%= link_to 'Edit', edit_card_path(@card) %> </p>
        
        <br>
        <p class="lead">  <%= @card.short_desc %></p>
        <p>
        <%= @card.category %>
        <%= @card.long_desc %>
        </p>
        <p>
        <strong>Readiness:</strong>
        <%= @card.readiness %>
        </p>
        <hr>
        <p>Useful Links</p>
        <ul class="list-unstyled">
          <% @links.each do |link| %>
          <li><%= link.link_type %> - <a href="<%= link.url %>" target="_blank"><%= link.name %></a></li>
          <% end %>
        </ul>
        
      </div>
    </div>
    <div class="row">
    <div class="col-md-12 text-center">
      <h3>Related Techs: <%= @card.followers_count %></h3>
      </div>
       <div class="col-md-12">
 <% @card.followers.each do |cardf| %>
        <%= render 'card', card: cardf %>
      <% end %>
      </div>
      
             
          </div>

