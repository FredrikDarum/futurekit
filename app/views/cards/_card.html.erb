<div class="main-modal-image" style="background:url('<%= @card.photo %>'); background-size:cover;">
	<h3> <%= @card.name %></h3>
</div>
<p class="text-right">
Last updated at : <%= time_ago_in_words(@card.updated_at) %>
</p>
<p>
  <strong>Category:</strong>
  <%= Category.find(@card.category_id).name if @card.category_id? %>
</p>
<p>
  <strong>Long description:</strong>
  <%= @card.long_desc %>
</p>
<p>
  <strong>Readiness:</strong>
  <%= @card.readiness %>
</p>
<hr>

<p>Useful Links</p>

<ul class="list-unstyled">
<% @links.each do |a| %>
 <li>
 	<a href="<% a.url %>"><%= a.name %></a>
</li>
<% end %>
</ul>

<hr>
<%= form_for [@card, @link] do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<hr>

