<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
  <a href="<%= card_path(card) %>" >
    <div class="card-container">
      <div class="card">
        <div class="front">
          <div class="cover">
            <img src="<%= card.photo_url(:display) %>">
            <div class="nametag-photo-name">
            </div>
          </div>
          <div class="content">
            <div class="main"> 
              <h3 class="name"><%= card.name %></h3>

              <p class="description"><%= card.short_desc.truncate(144) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>

</div>